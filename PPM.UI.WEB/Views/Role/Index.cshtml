@model IEnumerable<PPM.DAL.Models.Role>

    @{
        ViewBag.Title = "Role";
    }

    <h1 >Role List</h1>

   @if (TempData["InfoMessage"] != null)
    {
        <div class = "alert alert-info">
            <strong>Info ! </strong>@TempData["InfoMessage"]
            <button type="button" class="close" data-dis="alert" aria-label="Close">
                <span>&times;</span>
            </button>
         </div>
    }
    else if (TempData["SuccessMessage"] != null)
    {
        <div class = "alert alert-success">
            <strong>Success ! </strong>@TempData["SuccessMessage"]
            <button type="button" class="close" data-dis="alert" aria-label="Close">
                <span>&times;</span>
            </button>
         </div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class = "alert alert-danger">
            <strong> Error ! </strong>@TempData["ErrorsMessage"]
            <button type="button" class="close" data-dis="alert" aria-label="Close">
                <span>&times;</span>
            </button>
         </div>
    }

    <p>
        <h2>@Html.ActionLink("Create New Role", "Create",null, new {@class = "btn btn-primary"})</h2>
    </p>
   
    <br>


    <table class="Table">
        <thead>
            <tr>
               
                <th  width="300">
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th>Action Methods</th>
            </tr>
        </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                
                <td>
                    @item.RoleName
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RoleId }, new {@class = "btn btn-primary"}) &nbsp;&nbsp;
                    @Html.ActionLink("Details", "Details", new { id = item.RoleId }, new {@class = "btn btn-success"}) &nbsp;&nbsp;
                    @Html.ActionLink("Delete", "Delete", new { id = item.RoleId }, new {@class = "btn btn-danger"})
                </td>
            </tr>
        </tbody>
        
    }
</table>
<html>
    <style>
        th, td {
        padding: 25px;
        }

        table {
        border-collapse: collapse;
        border: 2px solid black;
        }

        th, td {
        border: 2px solid black;
    }
    </style>
</html>